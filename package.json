{
  "name": "asistente-ia-voz",
  "version": "1.0.0",
  "description": "Un asistente de IA controlado por voz para controlar un PC, dise√±ado para usuarios con movilidad reducida.",
  "main": "dist-electron/main.js",
  "scripts": {
    "dev": "concurrently \"npm:vite\" \"npm:electron:dev\"",
    "vite": "vite",
    "electron:dev": "wait-on tcp:5173 && tsc -p electron/tsconfig.json && electron .",
    "build": "tsc -p electron/tsconfig.json && vite build",
    "dist": "npm run build && electron-builder"
  },
  "dependencies": {
    "@google/genai": "^1.27.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "concurrently": "^8.2.2",
    "dotenv": "^16.4.5",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "postcss": "^8.4.39",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.5.3",
    "vite": "^5.3.3",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.asistente.ia.voz",
    "productName": "Asistente de IA por Voz",
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "directories": {
      "output": "release"
    },
    "win": {
      "target": "nsis"
    }
  }
}
